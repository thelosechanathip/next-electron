{
  "name": "test-electron",
  "version": "0.2.0",
  "description": "My Electron App",
  "private": true,
  "main": "electron/main.js",
  "author": "Your Name",
  "scripts": {
    "dev": "npm run build:backend && concurrently \"npm run dev:next\" \"npm run dev:electron\"",
    "dev:next": "next dev --turbopack",
    "dev:electron": "wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .",
    "build:backend": "cd backend && go build -o ../bin/backend.exe",
    "build": "next build",
    "dist": "npm run build:backend && next build && electron-builder",
    "dist:clean": "rm -rf dist out bin/backend.exe",
    "dist:full": "npm run dist:clean && npm run dist",
    "postdist": "echo 'Build completed! Installer: dist/Electron Setup 0.2.0.exe'"
  },
  "build": {
    "productName": "Electron",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "electron/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "bin",
        "to": "bin",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "electron/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "next": "16.0.4",
    "react": "19.2.0",
    "react-dom": "19.2.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-plugin-react-compiler": "1.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.3",
    "electron-builder": "^25.1.8",
    "eslint": "^9",
    "eslint-config-next": "16.0.4",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^9.0.3"
  }
}